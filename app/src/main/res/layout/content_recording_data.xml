<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_pressed"
    android:backgroundTint="@color/common_google_signin_btn_text_dark_default"

    tools:context=".RecordAuto"
    tools:showIn="@layout/activity_recording_data">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-black"
            android:text="Autonomous"
            android:textAlignment="center"
            android:textColor="@color/primaryGreen"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/matchNum"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
                android:text="Match #"
                android:textAlignment="center"
                android:textColor="@color/primaryGreen"
                android:textColorHint="#00F8F4F4" />

            <TextView
                android:id="@+id/team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
                android:text="Team #"
                android:textAlignment="center"
                android:textColor="@color/primaryGreen"
                android:textColorHint="#00F8F4F4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/matchNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primaryGreen"
                android:backgroundTintMode="add"
                android:ems="10"
                android:hint="ex. 1"
                android:inputType="number"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/teamInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primaryGreen"
                android:backgroundTintMode="add"
                android:ems="10"
                android:hint="ex.2976"
                android:inputType="number"
                android:textColorHint="@color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/pickSideText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
            android:text="Starting position of the robot? (relative to middle driver station)"
            android:textColor="@color/primaryGreen" />

        <Spinner
            android:id="@+id/pickSide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primaryGreen" />

        <TextView
            android:id="@+id/alliance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
            android:text="Alliance" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WhatwhatWhaWhat"
            android:textColor="@color/primaryGreen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/preloadedAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Had preloaded balls"
                android:textColor="@color/primaryGreen" />

            <TextView
                android:id="@+id/crossLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Crossed Line?"
                android:textAlignment="center"
                android:textColor="@color/primaryGreen" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cells Collected"
                android:textAlignment="center"
                android:textColor="@color/primaryGreen" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/hasPreload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/common_google_signin_btn_text_dark_pressed"
                android:text="Yes" />

            <CheckBox
                android:id="@+id/crossCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/common_google_signin_btn_text_dark_pressed"
                android:text="Yes" />

            <NumberPicker
                android:id="@+id/cellsCollected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/common_google_signin_btn_text_dark_pressed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/preloadedAuto" />

        </LinearLayout>

        <TextView
            android:id="@+id/scoring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scoring"
            android:textAlignment="center"
            android:textColor="@color/primaryGreen" />

        <LinearLayout
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rectangle"
                android:layout_width="77dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Bottom Port"
                android:textAlignment="center"
                android:textColor="@color/primaryGreen" />

            <TextView
                android:id="@+id/hexagon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upper Port"
                android:textAlignment="center"
                android:textColor="@color/primaryGreen" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:orientation="horizontal">

            <NumberPicker
                android:id="@+id/rectScore"
                android:layout_width="183dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/preloadedAuto" />

            <NumberPicker
                android:id="@+id/hexScore"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/preloadedAuto" />

        </LinearLayout>

        <Button
            android:id="@+id/teleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primaryGreen"
            android:text="TeleOp"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>